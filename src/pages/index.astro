import db from '../lib/db.js';

// Obtener coches destacados y disponibles
const cochesDestacados = db.prepare(`
  SELECT * FROM cars
  WHERE destacado = 1 AND estado = 'disponible'
  ORDER BY created_at DESC
  LIMIT 6
`).all();

// Si no hay coches destacados, mostrar los 6 m√°s recientes disponibles
const cochesParaMostrar = cochesDestacados.length > 0
  ? cochesDestacados
  : db.prepare(`
      SELECT * FROM cars
      WHERE estado = 'disponible'
      ORDER BY created_at DESC
      LIMIT 6
    `).all();

// Manejar formulario de contacto
if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const action = formData.get('action')?.toString();

  if (action === 'contact') {
    const nombre = formData.get('nombre')?.toString();
    const email = formData.get('email')?.toString();
    const telefono = formData.get('telefono')?.toString();
    const tipo = formData.get('action') === 'vender' ? 'vender' : 'comprar';
    const marca = formData.get('marca')?.toString();
    const modelo = formData.get('modelo')?.toString();
    const mensaje = formData.get('mensaje')?.toString();

    if (nombre && email && telefono) {
      db.prepare(`
        INSERT INTO leads (nombre, email, telefono, tipo, marca, modelo, mensaje, estado)
        VALUES (?, ?, ?, ?, ?, ?, ?, 'nuevo')
      `).run(nombre, email, telefono, tipo, marca || null, modelo || null, mensaje || null);
    }
  }
}
